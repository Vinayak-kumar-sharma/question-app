<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quiz Arena</title>

</head>
<body>
<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #0f0f1a;
    color: #fff;
    line-height: 1.6;
  }

  h1, h2, h3 {
    color: #ffdf6b;
    text-shadow: 1px 1px 2px #000;
  }

  .hero-combat {
    background: linear-gradient(to right, #1f1f3a, #2a2a5a);
    padding: 60px 20px;
    position: relative;
    text-align: center;
    overflow: hidden;
  }

  .cutout.left-square, .cutout.right-square {
    width: 60px;
    height: 60px;
    background: #ffc107;
    position: absolute;
    top: 20px;
  }

  .cutout.left-square {
    left: 20px;
    transform: rotate(45deg);
  }

  .cutout.right-square {
    right: 20px;
    transform: rotate(45deg);
  }

  .combat-content {
    max-width: 700px;
    margin: auto;
  }

  .xp-bar {
    background: #333;
    border-radius: 10px;
    overflow: hidden;
    height: 20px;
    margin: 20px auto;
    width: 70%;
  }

  .xp-fill {
    height: 100%;
    background: linear-gradient(90deg, #ff9800, #ffc107);
    width: 40%;
  }

  .hero-tags {
    margin-top: 15px;
  }

  .tag {
    background: #29293d;
    color: #ffdf6b;
    padding: 5px 10px;
    margin-right: 8px;
    border-radius: 20px;
    display: inline-block;
    font-size: 0.9rem;
  }

  .cta-button {
    margin-top: 25px;
    background: #ff9800;
    border: none;
    color: #fff;
    padding: 12px 25px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    border-radius: 30px;
    transition: background 0.3s ease;
  }

  .cta-button:hover {
    background: #e68900;
  }

  .featured, .all-quizzes {
    padding: 40px 20px;
    background-color: #1a1a2e;
  }

  .featured {
    background: #2e2e4e;
  }

  .quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .quiz-card {
    background: #26264d;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    transition: transform 0.2s ease;
  }

  .quiz-card:hover {
    transform: scale(1.03);
  }

  .desc {
    font-size: 0.95rem;
    margin: 10px 0;
    color: #ccc;
  }

  .tags {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    margin-top: 10px;
  }

  .xp {
    color: #ffdf6b;
    font-weight: bold;
  }

  .hero-divider {
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, #ff9800, #ffc107);
    margin-top: 40px;
  }
</style>

  <!-- Hero Section -->
  <section class="hero-combat">
    <div class="cutout left-square"></div>

    <div class="combat-content">
      <h1>‚öîÔ∏è Enter the Combat Zone</h1>
      <p>Sharpen your skills and rise through the ranks. Prove you're the best!</p>

      <div class="xp-bar">
        <div class="xp-fill"></div>
      </div>

      <div class="hero-tags">
        <span class="tag">XP +100</span>
        <span class="tag">Level 1</span>
      </div>

      <button class="cta-button">‚ö° Join the Fight</button>
    </div>

    <div class="cutout right-square"></div>
    <div class="hero-divider"></div>
  </section>


  <!-- üî• Featured Quizzes -->
  <section class="featured">
    <h2>üî• Featured Quizzes</h2>
    <div class="quiz-grid">
      <% featuredQuizzes.forEach(quiz => { %>
        <div class="quiz-card">
          <h3><%= quiz.quizName %></h3>
          <p class="desc">Featured quiz description here.</p>
          <div class="tags">
            <span class="tag"><%= quiz.tags.join(', ') %></span>
            <span class="xp">XP: 200</span>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- üìö All Quizzes -->
  <section class="all-quizzes">
    <h2>üìö All Quizzes</h2>
    <div class="quiz-grid">
      <% otherQuizzes.forEach(quiz => { %>
        <div class="quiz-card">
          <h3><%= quiz.quizName %></h3>
          <p class="desc">Explore and conquer new topics.</p>
          <div class="tags">
            <span class="tag"><%= quiz.tags.join(', ') %></span>
            <span class="xp">XP: 100</span>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

</body>
</html>
